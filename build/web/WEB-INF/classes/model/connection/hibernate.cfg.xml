<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dbclinica?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">12345</property>
    <mapping resource="model/bean/Tela.hbm.xml"/>
    <mapping resource="model/bean/Medicamento.hbm.xml"/>
    <mapping resource="model/bean/Tipousuario.hbm.xml"/>
    <mapping resource="model/bean/Medico.hbm.xml"/>
    <mapping resource="model/bean/Paciente.hbm.xml"/>
    <mapping resource="model/bean/Especialidade.hbm.xml"/>
    <mapping resource="model/bean/Resultado.hbm.xml"/>
    <mapping resource="model/bean/Exame.hbm.xml"/>
    <mapping resource="model/bean/Receita.hbm.xml"/>
    <mapping resource="model/bean/Recepcionista.hbm.xml"/>
    <mapping resource="model/bean/Consulta.hbm.xml"/>
    <mapping resource="model/bean/Fabricante.hbm.xml"/>
    <mapping resource="model/bean/Usuario.hbm.xml"/>
    <mapping resource="model/bean/Medicoespecialidade.hbm.xml"/>
    <mapping resource="model/bean/Agenda.hbm.xml"/>
    <mapping resource="model/bean/Tipoexame.hbm.xml"/>
    <mapping resource="model/bean/Acesso.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
